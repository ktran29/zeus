{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
    ],
    "rules": {
        "eqeqeq": [1, "always"],
        "import/no-unresolved": 2,
        "indent": [1, 4, { "SwitchCase": 1 }],
        "linebreak-style": [1, "unix"],
        "no-console": [0],
        "no-param-reassign": [1],
        "quotes": [1, "single", { "allowTemplateLiterals": true }],
        "semi": [1, "always"],
        "no-extra-boolean-cast": 0
    }
}
